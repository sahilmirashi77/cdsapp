<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightsteelblue"
    android:orientation="vertical"
    tools:context=".ssb.SSBprocedure">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lightsteelblue"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="315dp"
                android:layout_margin="10dp"
                app:srcCompat="@drawable/ssbprocess" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/backyfive"
                android:elevation="2dp"
                android:fontFamily="sans-serif-smallcaps"
                android:gravity="center"
                android:lineSpacingExtra="5sp"
                android:paddingLeft="16dp"
                android:paddingTop="4dp"
                android:paddingRight="16dp"
                android:paddingBottom="2dp"
                android:shadowColor="#0B0909"
                android:text="FIVE DAYS SSB PROCEDURE"
                android:textColor="#0B0A0A"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dayone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/procedurebutton"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="DAY 1:SCREENING"
                android:textColor="#0B0B0B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contentdayone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lightsteelblue"
                android:lineSpacingExtra="5sp"
                android:outlineAmbientShadowColor="#F44336"
                android:padding="5dp"
                android:textColor="#090909"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/day2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/procedurebutton"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="DAY 2 PYSHOLOGICAL TEST"
                android:textColor="#0B0B0B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contentdaytwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lightsteelblue"
                android:lineSpacingExtra="5sp"
                android:padding="5dp"
                android:textColor="#0E0E0E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/day34"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/procedurebutton"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text=" DAY 3 AND DAY 4:INTERVIEW AND GTO"
                android:textColor="#0B0B0B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contentday34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lightsteelblue"
                android:lineSpacingExtra="5sp"
                android:padding="5dp"
                android:textColor="#0E0E0E"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/day5"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/procedurebutton"
                android:gravity="center"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="DAY5:CONFERENCE"
                android:textColor="#0B0B0B"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contentday5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lightsteelblue"
                android:lineSpacingExtra="5sp"
                android:padding="5dp"
                android:textColor="#0E0E0E"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>